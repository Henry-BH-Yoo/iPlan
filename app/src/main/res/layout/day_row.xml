<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/day_row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom"
            android:padding="8dp">

            <TextView
                android:id="@+id/txtDayStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.8"
                android:paddingStart="5dp"
                android:hint="@string/start_time"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/txtDayRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="@string/day_todo_name"
                android:textAlignment="viewStart"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/imgBtnHasAlarm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5.5"
                android:background="#00FFFFFF"
                android:visibility="invisible"
                app:srcCompat="@drawable/new_ic_alarm" />

            <CheckBox
                android:id="@+id/chkIsDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5.9"
                android:buttonTint="@color/teal_700" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>