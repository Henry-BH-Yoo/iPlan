<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IPlan" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_50</item>
        <item name="colorPrimaryVariant">@color/gray_300</item>
        <item name="colorOnPrimary">@color/gray_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/gray_900</item>



    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Splash theme at startup for main activity -->
        <item name="android:windowBackground">@drawable/ic_iplan_splash</item>
    </style>
</resources>