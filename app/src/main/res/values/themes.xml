<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IPlan" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_50</item>
        <item name="colorPrimaryVariant">@color/gray_500</item>
        <item name="colorOnPrimary">@color/gray_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here.<item name="android:background">@null</item> -->
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.IPlan.Dark" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_900</item>
        <item name="colorPrimaryVariant">@color/gray_500</item>
        <item name="colorOnPrimary">@color/gray_50</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:itemBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.App.Small" parent="Theme.IPlan">
        <item name="mainTextSize">@dimen/text_size_1</item>
    </style>

    <style name="Theme.App.Medium" parent="Theme.IPlan">
        <item name="mainTextSize">@dimen/text_size_2</item>
    </style>

    <style name="Theme.App.Large" parent="Theme.IPlan">
        <item name="mainTextSize">@dimen/text_size_3</item>
    </style>




    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Splash theme at startup for main activity -->
        <item name="android:background">@drawable/ic_iplan_splash</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>



</resources>